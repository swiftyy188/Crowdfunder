<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<div>
	<% if current_user %>
	        Signed in as <%= link_to current_user.first_name, current_user %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
	      <% else %>

	      <div class = "signup">
	        <%= link_to "Sign up", new_user_path %>
	      </div>
	      <div class = "login">
	        <%= link_to "Log in", new_session_path %> 
	      </div>
	      <% end %>
	<div class = "project">
	<%= link_to "Projects", projects_path%><br>
	</div>
</div>
<body>
<% if flash[:notice] %>
      <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p id="alert"><%= flash[:alert] %></p>
    <% end %>
    
    

<%= yield %>

      <% if current_user %>
        Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
        <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
      <% end %>
    </p>


</body>
</html>
