<script src="https://code.jquery.com/jquery-1.10.2.js"></script>

<h1><%= @project.name %></h1>

<div>
<img src="<%= @project.image %>">
	<ul>
    <li>Description: <%= @project.description %></li>
    <li>
        <% if (Time.now() < @project.end_date) %>
          This project ends in <%= distance_of_time_in_words_to_now(@project.end_date) %>.
        <% else %>
          Funding for this project has ended.
        <% end %>
    </li>
  </ul>

   <% if (Time.now() > @project.end_date) %>
   <p>This project has expired!</p>
  <% else %>
   <%= link_to "Pledge!", new_project_pledge_path(@project) %>
  <% end %>


<p>Funding Goal: <%= @project.funding_goal %></p>
<% if @project.total == nil %>
<p>No one has pledge to this project</p>
<% else %>
<p>Total Raised:$ <%= @project.total %></p>
<% end %>

<p>Project Creator: <%= link_to "#{@project.user.name}", user_path(@project.user) %></p>

</div>
<h2>Rewards</h2>
<div>
	<% @project.rewards.each do |reward| %>
  <img src= "<%= reward.image %>">
  	<ul>
    	<li>Title: <%= reward.title %></li>
    	<li>Description: <%= reward.description %></li>
    	<li>Amount:$ <%= reward.amount %></li>
  	</ul>
  <% end %>
</div>
<div id="sep">
<h3 id="t">Comments</h3>

<% @project.comments.each do |comment| %>
  <ul>
<p id="com"><strong><%= comment.text %></strong></p>
<p><li id="poster">Posted By: <em><%= comment.user.name %></em>. Added on <%= comment.created_at %></li></p>
</ul>
<% end %>
</div>

  <% if current_user %>
  <h4>Add a Comment:</h4>

  <%= form_for [@project, @comment] do |f| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> Comment could not be saved </h2>

        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :text %><br />
      <%= f.text_area :text %>
    </div>
    <div id="comment">
      <%= f.submit %>
    </div>
  <% end %>

<script>
  $("#comment").click(function(){
  alert( "Comment Created" );
});
</script>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to add a comment.</p>
<% end %>

<% if @project.total == nil || @project.total < 0 && @project.owner_id == current_user.id %>
<%= link_to "Delete", project_path(@project), method: :delete %><br></p>
<% elsif current_user == nil %>
<% end %>

