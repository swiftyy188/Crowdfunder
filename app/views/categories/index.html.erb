<%#= stylesheet_link_tag "categories" %>

<h1>Categories</h1>

	<% @categories.each do |category| %>
		<div class="category-show">
		   
		    <%= link_to image_tag(category.image), category_path(category),class: 'category-link' %>
			<%= link_to category.name, category_path(category), class: 'category-name' %>
	    </div>
	<% end %>

